[module/outage_time]
type = custom/script
interval = 43200
exec = python ~/Scripts/days_since_outdate.py
format-underline = ${colors.bright_black}

[module/gcal]
type = custom/script
interval = 60
exec = cd ~/.dotfiles && python agenda_reader.py
format-underline = ${colors.bright_black}

[module/weather]
type = custom/script
interval = 30
exec = /usr/bin/curl --silent "wttr.in/?format=%c+%t+%w+%o" > ~/.weather && cat ~/.weather
format-underline = ${colors.green}

[module/cpu]
type = internal/cpu
interval = 2
format-underline = ${colors.yellow}
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-underline = ${colors.cyan}
label = %percentage_used%%

[module/eth]
type = internal/network
interface = enp0s31f6
interval = 3.0

format-connected-underline = ${colors.green}
format-connected-prefix = "‚óè "
format-connected-prefix-foreground = ${colors.green}
format-disconnected-prefix = "‚óã"
format-disconnected-prefix-foreground = ${colors.red}
label-connected = %local_ip%
;format-disconnected = <label-disconnected>
format-disconnected-underline = ${colors.red}
;label-disconnected = %ifname% disconnected
label-disconnected-foreground = ${colors.red}

[module/date]
type = internal/date
interval = 5

date =
date-alt = " %Y-%m-%d"

time = %H:%M
time-alt = %H:%M:%S

format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.magenta}

label = %date% %time%

